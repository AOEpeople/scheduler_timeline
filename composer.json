{
  "name": "aoe/scheduler_timeline",
  "description": "Logs information about scheduler task execution and displays them in a graphical timeline",
  "type": "typo3-cms-extension",
  "keywords": ["TYPO3 CMS", "Scheduler", "Timeline"],
  "license": ["GPL-2.0+"],
  "homepage": "https://github.com/AOEpeople/scheduler_timeline",
  "support": {
    "issues": "https://github.com/AOEpeople/scheduler_timeline/issues"
  },
  "require": {
    "php": ">=7.0",
    "typo3/cms-core": "^8.7",
    "typo3/cms-extbase": "^8.7",
    "typo3/cms-scheduler": "^8.7",
    "typo3fluid/fluid": "^2.6"
  },
  "require-dev": {
    "nimut/testing-framework": "^4.1"
  },
  "autoload": {
    "psr-4": {
      "AOE\\SchedulerTimeline\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AOE\\SchedulerTimeline\\Tests\\": "Tests"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/scheduler_timeline ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/scheduler_timeline"
    ],
    "test:unit": [
      "[ -e .Build/bin/phpunit ] || composer update",
      "TYPO3_PATH_ROOT=$(pwd)/.Build/Web .Build/bin/phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit/ --debug --verbose"
    ],
    "test:functional": [
      "[ -e .Build/bin/phpunit ] || composer update",
      "TYPO3_PATH_ROOT=$(pwd)/.Build/Web .Build/bin/phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/FunctionalTests.xml Tests/Functional --debug --verbose",
      "[ -L .Build/Web/typo3conf/ext/scheduler_timeline ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/scheduler_timeline"
    ],
    "extension-release": [
      "rm -rf Tests/",
      "rm .gitignore",
      "rm .scrutinizer.yml",
      "rm .travis.yml"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "8.0.0-dev"
    },
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    },
    "helhum/typo3-console": {
      "install-extension-dummy": false
    }
  }
}
